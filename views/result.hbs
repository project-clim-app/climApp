
<div class="thumb">
        {{#switch result.0.prevision.0.sky}} 
            {{#case 'Poco nuboso'}} <img class="card-img-top" src="./images/sun.png"> {{/case}}
            {{#case 'Nuboso'}} <img class="card-img-top" src="./images/cloudy.png"> {{/case}}
            {{#case 'Muy nuboso con lluvia escasa'}} <img class="card-img-top" src="./images/rain_sun.png"> {{/case}}
            {{#case 'Intervalos nubosos'}} <img class="card-img-top" src="./images/cloudy.png"> {{/case}}
            {{#case 'Muy nuboso'}} <img class="card-img-top" src="./images/clouds.png"> {{/case}}
            {{#case 'Nuboso con lluvia escasa'}} <img class="card-img-top" src="./images/rain_sun.png"> {{/case}}
            {{#case 'Cubierto con lluvia'}} <img class="card-img-top" src="./images/rain.png"> {{/case}}
            {{#case 'Despejado'}} <img class="card-img-top" src="./images/sun.png"> {{/case}}
            {{#case 'Nubes altas'}} <img class="card-img-top" src="./images/clouds.png"> {{/case}}
        {{/switch}}
        
